@{
    Layout = "_Layout";
}

<div class="jumbotron">
    <h1>Word Counter</h1>
</div>

<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8 home-buttons">
    <form action="/results" method="post">
        <label for="chosen-word">Enter word</label>
        <input id="chosen-word" name="chosen-word" class="form-control" type="text">
        <label for="user-string">Enter a sentence</label>
        <input id="user-string" name="user-string" class="form-control" type="text">
        <br>
      <button type="submit" class="btn btn-info btn-lg home-btn">Count</button>
    </form>
    </div>
    <div class="col-md-2">
    </div>
</div>
